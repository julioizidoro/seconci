<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<application>
		<message-bundle>com.algaworks.Messages</message-bundle>
	
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
	</application>
	
	
    <navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>index</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	 <navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>dashboard</from-outcome>
			<to-view-id>/pages/dashboard/dashboard.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	 <navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>cadastroRelatorio</from-outcome>
			<to-view-id>/pages/relatorio/cadRelatorio.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	 <navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>consultaRelatorios</from-outcome>
			<to-view-id>/pages/relatorio/consRelatorios.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>cadRelatorioItemNorma</from-outcome>
			<to-view-id>/pages/relatorio/cadrelatorioitemnorma.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

</faces-config>